pipeline{
	agent any
	tools{
		maven 'Maven'
		jdk 'JDK'
	}
	stages{
		stage('CheckOut'){
			steps{
				git "https://github.com/Vinayak-Rajput/Maven-HelloWorld.git"
			}
		}
		stage('Build'){
			steps{
				sh 'mvn clean install'
			}
		}
		stage('Test'){
			steps{
				sh 'mvn test'
			}
		}
		stage('Run Application'){
			steps{
				sh 'java -jar target/Maven-HelloWorld.jar'
			}
		}
	}
	post{
		success{
			echo 'Run and build successfull!'
		}
		failure{
			echo 'Run Failed'
		}
	}
}

